package negocio;

import java.util.ArrayList;

public class Jogador {

	private String nome;
	private int tentativas;
	private ArrayList<Integer> numerosApostados;

	public Jogador() {
	    this.listaNumeros = new ArrayList<Integer>();
	}
	public void setNome(String nome) {
		this.nome = nome;
	}

	public String getNome() {
		return this.nome;
	}

	public int getNumeroTentativa() {
		return this.numeroTentativa;
	}

	public void setNumeroTentativa() {
		this.tentivas++;
	}
	
	public ArrayList<Integer> getListaNumeros(){
		return this.numerosApostados;
	}

	
	public void addNumeroApostado(int numeroApostado) {
		this.numerosApostados.add(numeroApostado);
	}
}
